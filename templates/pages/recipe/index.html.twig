{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes recettes
{% endblock %}

{% block body %}
	<div class="container my-4">
		<h1 class="my-4">Mes recettes</h1>
		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% if not recipes.items is same as([]) %}
			<a href="{{ path('recipe.new') }}" class="btn btn-primary my-4">Ajouter une recette</a>
			<div class="count">
				<h4>Il y a
					{{ recipes.getTotalItemCount }}
					recettes.</h4>
			</div>

			<table class="table table-hover mt-4">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix</th>
						<th scope="col">Difficulté</th>
						<th scope="col">Date de création</th>
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					</tr>
				</thead>

				<tbody>
					{% for recipe in recipes %}
						<tr class="table-primary">
							<th scope="row">{{ recipe.id }}</th>
							<td>{{ recipe.name }}</td>
							<td>
								{% if recipe.price is null %}
									Non renseigné
								{% else %}
									{{ recipe.price }}
								{% endif %}
							</td>
							<td>
								{% if recipe.difficulty is null %}
									Non renseigné
								{% else %}
									{{ recipe.difficulty }}
								{% endif %}
							</td>
							<td>{{ recipe.createdAt|date("d/m/Y") }}</td>
							<td>
								<a href="{{path('recipe.edit', { id: recipe.id })}}" class="btn btn-info">Modifier</a>
							</td>

							<td>
								<a href="{{path('recipe.delete', { id: recipe.id })}}" class="btn btn-warning">Supprimer</a>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</body>
		</table>
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(recipes) }}</div>
	{% else %}
		<h4>Il n'y a pas de recette</h4>
	{% endif %}
</div>{% endblock %}
